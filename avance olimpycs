class Olympics:
    def __init__(self):
        self.eventos=[]
    def registrarEvento(self):
        evento=input("Que evento desea registrar?").strip()
        if evento in self.eventos:
            print("Evento repetido")
        else:
            self.eventos.append(evento)





while True:
    print("Juegos Olimpicos LA 2028")
